/********************************************************************************************/
/*////////////////////////////////////////////////////////////////////////////////////////////
/* A Form Section
/////////////////////////////////////////////////////////////////////////////////////////////
/********************************************************************************************/
/* Fieldsets */
section[data-template="edit/edit"] fieldset
{
	padding-top:7px;
	margin-bottom:10px;
}
section[data-template="edit/edit"]>form>fieldset>legend
{
	font-weight:bold;
}
section[data-template="edit/edit"]>form>fieldset>.descr
{
	margin-bottom:10px;
	color:#ccc;
}

/* Lines */
section[data-template="edit/edit"]>form>fieldset>ol>li
{
	background:#F2F2F2;
	margin-bottom:10px;
	-moz-border-radius:5px;
	-webkit-border-radius:5px;
	border-radius:5px;
	padding:4px;
	width:700px;
}

/* Labels */
section[data-template="edit/edit"]>form>fieldset>ol>li>label
{
	color:#333333;
	width:160px;
	display:inline-block;
	vertical-align:top;
	padding:10px;
	font-weight:bold;
	text-align:right;
}

/* Field */
section[data-template="edit/edit"]>form>fieldset ol>li .wrapper
{
	width:508px; 
	display:inline-block;
}
section[data-template="edit/edit"]>form>fieldset ol>li .wrapper .field
{
	position:relative;
	display:block;
	padding:3px;
}

section[data-template="edit/edit"]>form>fieldset ol>li.number>.wrapper .field,
section[data-template="edit/edit"]>form>fieldset ol>li.text>.wrapper .field,
section[data-template="edit/edit"]>form>fieldset ol>li.textarea>.wrapper .field,
section[data-template="edit/edit"]>form>fieldset ol>li.attr>.wrapper .field,
section[data-template="edit/edit"]>form>fieldset ol>li.wysiwyg>.wrapper .field,
section[data-template="edit/edit"]>form>fieldset ol>li.multipleselect>.wrapper .field,
section[data-template="edit/edit"]>form>fieldset ol>li.rel>.wrapper .field	
{
	border:1px solid #ccc;
	-moz-border-radius:3px;
	-webkit-border-radius:3px;
	border-radius:3px;
	background:#fff;
	-webkit-transition:border-color .3s ease-in;
	-moz-transition:border-color .3s ease-in;
	-o-transition:border-color .3s ease-in;
	transition:border-color .3s ease-in;
}

/********************************************************************************************/
/* Help
/********************************************************************************************/
section[data-template="edit/edit"]>form>fieldset ol>li .wrapper .help
{
	padding:10px 0;
	display:none;
}

/********************************************************************************************/
/* Control
/********************************************************************************************/
/* Field-level */
li.ok .field {
/*	border-color:#6cbf2d !important; */
}
li.ko .field {
	border-color:#df3528 !important;
}

/* Control */
section[data-template="edit/edit"] fieldset ol>li .control {
	position:absolute;
	right:-50px;
	top:10px;
	height:35px;
	line-height:35px;
	width:35px;
	text-align:center;
	color:#fff;
	-moz-border-radius:5px;
	-webkit-border-radius:5px;
	border-radius:5px;
}
section[data-template="edit/edit"] fieldset ol>li .control:after
{
	content:'';
	width:0;
	height:0;
	border-style:solid;
	border-width:5px 8px 5px 0;
	border-color:transparent #ccc transparent transparent;
	position:absolute;
	top:12px;
	left:-8px;
}
/* Control guiding you */
section[data-template="edit/edit"] fieldset ol>li.guiding .control{
	background:#ccc;
}
section[data-template="edit/edit"] fieldset ol>li.guiding .control:after {
	border-right-color:#ccc;
}
/* Control OK */
section[data-template="edit/edit"] fieldset ol>li.ok .control{
	background:#6cbf2d;
}
section[data-template="edit/edit"] fieldset ol>li.ok .control:after {
	border-right-color:#6cbf2d;
}
section[data-template="edit/edit"] fieldset ol>li.ok .control:before {
	content:'✔';
}
/* Control K0 */
section[data-template="edit/edit"] fieldset ol>li.ko .control {
	background:#df3528;
}
section[data-template="edit/edit"] fieldset ol>li.ko .control:after {
	border-right-color:#df3528;
}
section[data-template="edit/edit"] fieldset ol>li.ko .control:before {
	content:'✕';
}

/********************************************************************************************/
/* Todo
/********************************************************************************************/
section[data-template="edit/edit"]>form>fieldset ol>li .wrapper .todo
{
	list-style-type:square;
	padding:10px 0 0 20px;
}

/********************************************************************************************/
/* Edit
/********************************************************************************************/
.locked fieldset .edit {
	display:none;
}
.unlocked fieldset .edit {
	display:block;
}
/* Fieldsets */
section[data-template="edit/edit"]>form>fieldset fieldset
{
	margin:10px;
}